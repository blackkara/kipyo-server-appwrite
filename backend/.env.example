# Server Configuration
PORT=3000
NODE_ENV=development

# Appwrite Configuration
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your_project_id_here
APPWRITE_API_KEY=your_api_key_here
APPWRITE_DATABASE_ID=your_database_id_here

# Collection IDs
COLLECTION_ID_USERS=your_users_collection_id
COLLECTION_ID_DIALOGS=your_dialogs_collection_id
COLLECTION_ID_MESSAGES=your_messages_collection_id

# Firebase Admin SDK
FIREBASE_CREDENTIALS_PATH=./kipyo-prod-firebase-adminsdk.json

# Google Cloud Services
GOOGLE_APPLICATION_CREDENTIALS=./google-translate-keyfile.json
GOOGLE_PROJECT_ID=your_google_project_id

# Google Cloud Translation
GOOGLE_TRANSLATE_PROJECT_ID=your_translate_project_id

# Google Cloud Vision (if used)
GOOGLE_VISION_API_KEY=your_vision_api_key

# AWS S3 (if used)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your_bucket_name

# SMTP Configuration (for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# PostHog Analytics (if used)
POSTHOG_API_KEY=your_posthog_api_key
POSTHOG_HOST=https://app.posthog.com

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Security
JWT_SECRET=your_jwt_secret_key_here
API_RATE_LIMIT=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true

# Application URLs
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Database
DB_CONNECTION_TIMEOUT=30000
DB_POOL_SIZE=10

# Cache (Redis - if used)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# Development Only
DEBUG=false
ENABLE_SWAGGER=true
